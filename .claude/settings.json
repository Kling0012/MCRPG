{
	"hooks": {
		"UserPromptSubmit": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "echo \"{{prompt}}\" > .claude/.task-description"
					}
				]
			}
		],
		"Stop": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "DESC=$(cat .claude/.task-description 2>/dev/null || echo ''); bash ./.scripts/workflow-complete.sh --non-interactive \"$DESC\""
					}
				]
			}
		]
	},
	"statusLine": {
		"type": "command",
		"command": "npx -q @claude-flow/cli@latest hooks statusline 2>/dev/null || echo Claude Code",
		"refreshMs": 5000,
		"enabled": true
	},
	"permissions": {
		"allow": [
			"Bash(npx claude-flow:*)",
			"Bash(npx @claude-flow/*)",
			"mcp__claude-flow__*",
			"Bash(./.scripts/*)",
			"Bash(git *)",
			"Bash(gh *)",
			"Bash(mvn *)",
			"Bash(mvn clean *)"
		],
		"deny": [
			"Bash(rm -rf /*)",
			"Bash(rm -rf /:*)",
			"Bash(rm -rf ~/*)",
			"Bash(rmdir /)",
			"Bash(dd if=)",
			"Bash(:> *)",
			"Bash(format c:)"
		]
	}
}
